{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["src/*"],
      "@/public/*": ["public/*"],
      "@/components/*": ["src/presentation/components/*"],
      "@/atoms*": ["src/presentation/components/atoms/*"],
      "@/molecules/*": ["src/presentation/components/molecules*"],
      "@/hooks/*": ["src/core/hooks/*"],
      "@/contexts/*": ["src/core/contexts/*"],
      "@/handlers/*": ["src/core/handlers/*"],
      "@/libs/*": ["src/core/libs/*"],
      "@/services/*": ["src/domain/services/*"],
      "@/constants/*": ["src/core/constants/*"],
      "@/core/*": ["src/core/*"],
      "@/pages/*": ["src/core/pages/*"],
      "@/screens/*": ["src/presentation/screens/*"],
      "@/templates/*": ["src/presentation/templates/*"],
      "@/fragments/*": ["src/presentation/fragments/*"],
      "@/entities/*": ["src/domain/entities/*"],
      "@/utils/*": ["src/domain/utils/*"],
      "@/usecases/*": ["src/core/usecases/*"],
      "@/infra/*": ["src/infra/*"],
      "@/api/*": ["src/core/api/*"],
      "@/frontend/*": ["src/core/api/fronted/*"],
      "@/backend/*": ["src/core/api/backend/*"],
      "@/mails/*": ["src/core/mails/*"],
      "@/factories/*": ["src/core/factories/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.js",
    "__mocks__/client.js"
  ],
  "exclude": ["node_modules"]
}
